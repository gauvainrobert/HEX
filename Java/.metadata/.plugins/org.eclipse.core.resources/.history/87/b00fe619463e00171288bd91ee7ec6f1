package hex.ihm.menu;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.ButtonGroup;
import javax.swing.JPanel;
import javax.swing.JRadioButton;

import hex.IHM;

public class choixIACommence extends JPanel{
	private IHM ihm;
	private ButtonGroup bg = new ButtonGroup();
	private JRadioButton jr1 = new JRadioButton("oui");
	private JRadioButton jr2 = new JRadioButton("non");
	
	public choixIACommence(IHM ihm){
		super();
		jr1.setSelected(true);
		jr1.addActionListener(new StateListener(ihm));
		jr2.addActionListener(new StateListener(ihm));
		bg.add(jr1);
		bg.add(jr2);
		this.add(jr1);
		this.add(jr2);
		this.ihm=ihm;
			
	}
	
	class StateListener implements ActionListener{
		private IHM ihm;
		public StateListener(IHM ihm){
			this.ihm=ihm;
		}
		public void actionPerformed(ActionEvent e) {
			if(((JRadioButton)e.getSource()).isSelected())
				ihm.setCommence_ia(true);
			else
				System.out.println("non");
		}
	}
	 
}
